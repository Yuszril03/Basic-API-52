@{
    ViewData["Title"] = "Employee";
    ViewData["Aplikasi"] = "API";
    Layout = "_LayoutTemplate";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Employee</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="https://localhost:44311/Template">API</a></li>
                    <li class="breadcrumb-item active">Employee</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">


        <div class="card mt-3 rounded">
            <div class="card-body">
                <button class="btn btn-success float-sm-right mb-4" data-toggle="modal" id="register" data-target="#regis"><i class="fa fa-plus-circle"></i>&nbsp;Add Employee</button>

                <div class="table-responsive">
                    <table id="table" class="table table-sm table-hover text-capitalize">
                        <thead class="thead-light">
                            <tr>
                                <th>NIK</th>
                                <th>Name</th>
                                <th>Gender</th>
                                <th>Phone Number</th>
                                <th>Salary</th>
                                <th>Role</th>
                                <th>University</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Modal -->
