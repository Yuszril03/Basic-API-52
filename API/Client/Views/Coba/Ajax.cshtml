@{
    ViewData["Title"] = "Ajax";
    ViewData["Aplikasi"] = "API";
    Layout = "_LayoutCoba";
}



<h1 class="mt-5">Belajar Ajax</h1>

<div class="table-responsive mt-5 mb-4">
    <table id="table" class="table table-sm table-hover text-capitalize">
        <thead class="thead-light">
            <tr>
                <th scope="col" style="width: 8%">No</th>
                <th scope="col">Name</th>
                <th scope="col">Url</th>
                <th scope="col" style="width: 8%">Opsi</th>
            </tr>
        </thead>
        <tbody >
        </tbody>
    </table>
</div>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-capitalize" id="exampleModalLabel"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalBody">
                <div class="text-center" id="imgFoto">

                </div>
                <div class="row mt-3 p-1">
                    <div class="col-4 font-weight-bold text-black-50">Name</div>
                    <div class="col-1 text-black-50">:</div>
                    <div class="col font-weight-bold text-capitalize" id="namePoke">1</div>
                </div>
                <div class="row mt-3 p-1">
                    <div class="col-4 font-weight-bold text-black-50">Height</div>
                    <div class="col-1 text-black-50">:</div>
                    <div class="col font-weight-bold text-capitalize" id="heightPoke">d</div>
                </div>
                <div class="row mt-3 p-1">
                    <div class="col-4 font-weight-bold text-black-50">Weight</div>
                    <div class="col-1 text-black-50">:</div>
                    <div class="col font-weight-bold text-capitalize" id="weightPoke"></div>
                </div>
                <div class="row mt-3 p-1">
                    <div class="col-4 font-weight-bold text-black-50">Abilities</div>
                    <div class="col-1 text-black-50">:</div>
                    <div class="col font-weight-bold text-capitalize" id="abilitiesPoke"></div>
                </div>
                <div class="row mt-3 p-1">
                    <div class="col-4 font-weight-bold text-black-50">Type</div>
                    <div class="col-1 text-black-50">:</div>
                    <div class="col font-weight-bold text-capitalize" id="typePoke"></div>
                </div>
                <div class="row mt-3 p-1">
                    <div class="col-4 font-weight-bold text-black-50"><u>Stance</u></div>
                </div>
                <div class="font-weight-bold text-capitalize" id="stancePoke"></div>

                <div class="row mt-3 p-1">
                    <div class="col-4 font-weight-bold text-black-50"><u>Statistics </u></div>
                </div>
                <div id="static" class="p-1">

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script type="text/javascript" src="~/js/Ajax.js"></script>
}